<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="AppBundle\Models\Mark" table="mark">
        <id name="id" type="string" columns="id" />
        <field name="format" type="string" column="format" />
        <field name="value" type="string" column="value" />

        <one-to-one field="date" target-entity="UtcDate" >
            <cascade><cascade-remove /></cascade>
            <join-column name="date_id"  referenced-column-name="id" on-delete="CASCADE" on-update="CASCADE"/>
        </one-to-one>
        <one-to-one field="juror" target-entity="Juror" >
            <cascade><cascade-remove /></cascade>
            <join-column name="juror_id"  referenced-column-name="id" on-delete="CASCADE" on-update="CASCADE"/>
        </one-to-one>
        <one-to-one field="realisation" target-entity="Realisation" >
            <cascade><cascade-remove /></cascade>
            <join-column name="realisation_id"  referenced-column-name="id" on-delete="CASCADE" on-update="CASCADE"/>
        </one-to-one>
    </entity>
</doctrine-mapping>
