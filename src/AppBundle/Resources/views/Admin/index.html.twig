{% extends 'AppBundle::layoutBO.html.twig' %}

{% block main %}
    <div class="wc-title-banner">
        <h2>Bonjour, {{ app.user.identity.firstName ~ ' ' ~ app.user.identity.lastName }}</h2>
    </div>

    <div class="wc-container">
        <div class="col-sm-12">
            <div class="wc-admin-block">
                <div>
                    <div class="col-sm-4">
                        <div class="wc-admin-block">
                            <p class="wc-admin-subtitle">Campagnes</p>

                            <a href="{{ path('admin.campaign.create') }}">
                                    <button type="button" class="btn-admin-form btn-add" name="button">Ajouter</button>
                            </a>
                            <div class="wc-admin-row">
                                {% for campaign in campaigns %}

                                    <p class="wc-admin-p">{{ campaign.name}}</p>
                                {% endfor %}
                            </div>
                            <a href="{{ path('admin.campaign.list') }}"><p class="wc-admin-seeAll">Tout voir</p></a>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="wc-admin-block">
                            <p class="wc-admin-subtitle">Notations</p>
                            <button type="button" class="btn-admin-form" name="button">Ajouter</button>
                            <div class="wc-admin-row">
                                <p class="wc-admin-p">Nom de campagne</p>
                                <p class="wc-admin-p">Nom de campagne</p>
                                <p class="wc-admin-p">Nom de campagne</p>
                                <p class="wc-admin-p">Nom de campagne</p>
                            </div>
                            <p class="wc-admin-seeAll">Tout voir</p>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="wc-admin-block">
                            <p class="wc-admin-subtitle">Gestion des utilisateurs</p>
                            <button type="button" class="btn-admin-form" name="button">Ajouter</button>
                            <div class="wc-admin-row">
                                <p class="wc-admin-p">Nom de campagne</p>
                                <p class="wc-admin-p">Nom de campagne</p>
                                <p class="wc-admin-p">Nom de campagne</p>
                                <p class="wc-admin-p">Nom de campagne</p>
                            </div>
                            <p class="wc-admin-seeAll">Tout voir</p>
                        </div>
                    </div>
                </div>
                <p>DEV WILL BE REMOVED</p>
                <ul>
                    <li><a href="{{ path('admin.realisation.list') }}">Liste des réalisations</a></li>
                    <li><a href="{{ path('admin.juror.list') }}">Liste des jurés</a></li>
                    <li><a href="{{ path('admin.administrator.list') }}">Liste des administrateurs</a></li>
                    <li><a href="{{ path('admin.campaign_administrator.list') }}">Liste des administrateurs de
                            campagne</a></li>
                    <li><a href="{{ path('admin.admins.invite') }}">Inviter un admin (administrator ou capaign
                            admin)</a> -> A mettre sur la vue de la liste des utilisateurs
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
