{% extends 'AppBundle::layoutFO.html.twig' %}

{% block main %}
    <div class="col-sm-12 no-padding">
        <div class="home index page-wrap">
            <div class="wc-title-banner">
                <h2>Connexion</h2>
            </div>
            <div class="wc-container">
                <div class="col-sm-12">
                    <div class="wc-admin-block">
                        {{ error }}

                        <form action="{{ path('public.login') }}" method="post" class="formLogin">
                            <input type="text" class="inputLogin" placeholder="Username" id="username" name="_username"
                                   value="{{ lastUsername }}"/>

                            <input type="password" class="inputLogin" placeholder="password" id="password"
                                   name="_password"/>

                            {#
                            If you want to control the URL the user
                            is redirected to on success (more details below)
                            <input type="hidden" name="_target_path" value="/account" />
                            #}

                            <button type="submit" class="btnLogin">login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}