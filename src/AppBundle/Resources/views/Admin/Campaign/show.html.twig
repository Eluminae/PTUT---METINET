{% extends 'AppBundle:Admin:layoutAdmin.html.twig' %}

{% block body %}
<div class="admin page-wrap">
	<div class="wc-title-banner">
		<h2>Campaign</h2>
	</div>
	<div class="wc-container">
		<div class="col-sm-12">
			<div class="wc-admin-block">

				<!--<div class="col-md-6">
					{{ dump(campaign) }}
				</div>-->

				<div class="wc-admin-row">
					<div class="row">
						<table class="table table-striped">
							<table class="table table-striped">
								<thead>
								<tr>
									<td>Nom</td>
									<td>Description</td>
									<td>Début</td>
									<td>Fin</td>
									<td>Créateur</td>
									<td>Image</td>
								</tr>
								</thead>
									<tr>
										<td><a href="{{ path('admin.campaign.show', {'campaignId': campaign.id}) }}">{{ campaign.name }}</a></td>
										<td>{{ campaign.description }}</td>
										<td>{{ campaign.beginningDate }}</td>
										<td>{{ campaign.endDate }}</td>
										<td>{{ campaign.creator.firstName }} {{ campaign.creator.lastName }}</td>
                                    <td><img src="campaignImages/{{ campaign.imageName }}" /></td>
									</tr>
							<tr>
								<td>
									<a href="{{ path('admin.campaign.delete', {'campaignId': campaign.id}) }}"><button type="button" class="btn-admin-form btn-modify" name="button">Supprimer</button></a>
								</td>
								<td>
									<a href="{{ path('admin.campaign.update', {'campaignId': campaign.id}) }}"><button type="button" class="btn-admin-form btn-modify" name="button">Modifier</button></a>
								</td>
								<td>
									<a href="{{ path('admin.realisation.create', {'campaignId': campaign.id}) }}"><button type="button" class="btn-admin-form btn-modify" name="button">Ajouter une réalisation</button></a>
								</td>
								<td>
									<a href="{{ path('admin.campaign.list') }}"><button type="button" class="btn-admin-form btn-modify" name="button">Retour liste</button></a>
								</td>
							</tr>
                                {% for realisation in realisations %}

									<thead>
									<tr>
										<td>Nom réa</td>
										<td>fichier</td>
										<td>Candidats</td>

									</tr>
									<tr>

                                        <td>{{ realisation.name }}</td>
										<td>{{ realisation.fileName }}</td>
										<td>{{ realisation.candidates }}</td>
									</tr>
									</thead>
                                {% endfor %}
						</table>
					</div>

				</div>

			</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}
