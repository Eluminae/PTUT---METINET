{% extends 'AppBundle::layoutAdmin.html.twig' %}

{% block body %}
    <h1>Realisation list</h1>
    <table>
        <tr>
            <th>Campaign</th>
            <th>Name</th>
            <th>Left at</th>
            <th>File</th>
            <th>Delete</th>
        </tr>
        {% for realisation in realisations %}
            <tr>
                <td><a href="{{ path('admin.campaign.show', {'campaignId': realisation.campaign.id}) }}">{{ realisation.campaign.name }}</a></td>
                <td><a href="{{ path('admin.realisation.show', {'realisationId': realisation.id}) }}">{{ realisation.name }}</a></td>
                <td>{{ realisation.leftAt }}</td>
                <td><a href="{{ asset(realisation.filePath) }}">Download</a></td>
		<td><a href="{{ path('admin.realisation.delete', {'realisationId': realisation.id}) }}">Delete</a></td>
	    </tr>
        {% endfor %}
    </table>
{% endblock %}
