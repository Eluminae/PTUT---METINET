{% extends 'AppBundle::navbarFO.html.twig' %}

{% block body %}
    <div class="wc-title-banner">
        <h2>Resultat de la campagne</h2>
    </div>
    <div class="wc-container">
        <div class="col-sm-12">
            <div class="wc-admin-block">
                <div class="wc-admin-row">
                    <div class="row">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <td>Nom de la campagne</td>
                                <td>Description</td>
                                <td>Début</td>
                                <td>Fin</td>
                                <td>Créateur</td>
                            </tr>
                            </thead>
                            <tr>
                                <td>{{ campaign.name }}</td>
                                <td>{{ campaign.description }}</td>
                                <td>{{ campaign.beginningDate }}</td>
                                <td>{{ campaign.endDate }}</td>
                                <td>{{ campaign.creator.firstName }} {{ campaign.creator.lastName }}</td>
                            </tr>
                        </table>
                        <a href="{{ path('juror.campaign.download', {'campaign': campaign.id}) }}"
                           class="btn-admin-form btn-modify">Télécharger les réalisations</a>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <td>Nom</td>
                                <td>Fichier</td>
                                <td>Candidats</td>
                                <td>Moyenne</td>
                            </tr>
                            </thead>
                            {% for realisation in realisations %}
                                <tr>
                                    <td>
                                        <a href="{{ path('admin.realisation.show', {'realisation': realisation.id}) }}">{{ realisation.name }}</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin.realisation.download', {'realisation': realisation.id}) }}">Télécharger</a>
                                    </td>
                                    <td>{{ realisation.candidates }}</td>
                                    <td>{{ realisation.averageMark | round(2) }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
