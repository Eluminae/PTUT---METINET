<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="public.homepage" path="/">
        <default key="_controller">AppBundle:Default:home</default>
    </route>

    <route id="public.admin.login" path="/admin/login/">
        <default key="_controller">AppBundle:Admin:login</default>
    </route>

    <route id="public.admin.logout" path="/admin/logout/">
        <default key="_controller">AppBundle:Admin:logout</default>
    </route>

    <route id="public.admin.home" path="/admin/">
        <default key="_controller">AppBundle:Admin:index</default>
    </route>

    <route id="public.juror_admin.login" path="/juror-admin/login/">
        <default key="_controller">AppBundle:JurorAdmin:login</default>
    </route>

    <route id="public.juror_admin.logout" path="/juror-admin/logout/">
        <default key="_controller">AppBundle:JurorAdmin:logout</default>
    </route>

    <route id="public.juror_admin.home" path="/juror-admin/">
        <default key="_controller">AppBundle:JurorAdmin:index</default>
    </route>

     <route id="public.campaign.register" path="/campaign/register">
        <default key="_controller">AppBundle:Campaign:registration</default>
    </route>

    <route id="public.realisation.register" path="/campaign/register-realisation/{campaignId}">
        <default key="_controller">AppBundle:Realisation:register</default>
    </route>

    <route id="public.campaign.home" path="/campaign/{campaignId}">
        <default key="_controller">AppBundle:Realisation:register</default>
    </route>
</routes>
