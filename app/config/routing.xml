<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- @todo : Need to be refactor to homepage -->
    <route id="public.homepage" path="">
        <default key="_controller">AppBundle:Default:home</default>
    </route>

    <!-- Register invitation -->
    <route id="public.register.invitation" path="/register/invitation/{invitationToken}">
        <default key="_controller">AppBundle:Register:registerFromInvitation</default>
    </route>

    <!-- Administrator's routes -->
    <route id="public.admin.login" path="/admin/login">
        <default key="_controller">AppBundle:Admin:login</default>
    </route>

    <route id="public.admin.logout" path="/admin/logout">
        <default key="_controller">AppBundle:Admin:logout</default>
    </route>

    <route id="public.admin.home" path="/admin">
        <default key="_controller">AppBundle:Admin:index</default>
    </route>

    <!-- Campaign administrator's routes -->
    <route id="admin.campaign.create" path="admin/campaigns/create">
        <default key="_controller">AppBundle:Administration/Campaign:create</default>
    </route>

    <route id="admin.campaign.list" path="/admin/campaigns">
        <default key="_controller">AppBundle:Administration/Campaign:list</default>
    </route>

    <route id="admin.campaign.show" path="/admin/campaigns/{campaignId}">
        <default key="_controller">AppBundle:Administration/Campaign:show</default>
    </route>

    <route id="admin.campaign.delete" path="/admin/campaigns/delete/{campaignId}">
        <default key="_controller">AppBundle:Administration/Campaign:delete</default>
    </route>

    <route id="admin.campaign.update" path="/admin/campaigns/update/{campaignId}">
        <default key="_controller">AppBundle:Administration/Campaign:update</default>
    </route>
    
    <!-- Campaign administrator login's routes -->
    <route id="public.campaign_admin.login" path="/campaign-admin/login">
        <default key="_controller">AppBundle:CampaignAdmin:login</default>
    </route>

    <route id="public.campaign_admin.logout" path="/campaign-admin/logout">
        <default key="_controller">AppBundle:CampaignAdmin:logout</default>
    </route>

    <route id="public.campaign_admin.home" path="/campaign-admin">
        <default key="_controller">AppBundle:CampaignAdmin:index</default>
    </route>

    <!-- Juror's routes -->
    <route id="public.juror.login" path="/juror/login">
        <default key="_controller">AppBundle:Juror:login</default>
    </route>

    <route id="public.juror.logout" path="/juror/logout">
        <default key="_controller">AppBundle:Juror:logout</default>
    </route>

    <route id="public.juror.home" path="/juror">
        <default key="_controller">AppBundle:Juror:index</default>
    </route>

    <!-- Need to be sort -->

    <route id="public.realisation.list_for_campaign" path="/realisation/list-for-campaign/{campaignId}">
        <default key="_controller">AppBundle:Realisation:listForCampaign</default>
    </route>

    <!-- Campaign routes -->
    <route id="public.campaign.show" path="/campaigns/{campaignId}">
        <default key="_controller">AppBundle:Campaign:show</default>
    </route>

    <route id="public.campaign.list" path="/campaigns">
        <default key="_controller">AppBundle:Campaign:list</default>
    </route>

    <!-- Realisation Administrator routes -->
    <route id="admin.realisation.show" path="/admin/realisations/{realisationId}">
        <default key="_controller">AppBundle:Administration/Realisation:show</default>
    </route>

    <route id="admin.realisation.delete" path="/admin/realisations/delete/{realisationId}">
        <default key="_controller">AppBundle:Administration/Realisation:delete</default>
    </route>

    <route id="admin.realisation.list" path="/admin/realisations">
        <default key="_controller">AppBundle:Administration/Realisation:list</default>
    </route>

    <route id="admin.realisation.create" path="/admin/realisations/create/{campaignId}">
        <default key="_controller">AppBundle:Administration/Realisation:create</default>
    </route>

    <!-- Realisation routes -->
    <route id="public.realisation.register" path="/realisation/register/{campaignId}">
        <default key="_controller">AppBundle:Realisation:register</default>
    </route>
</routes>
