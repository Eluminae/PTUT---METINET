<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- todo : Need to be refactor to homepage -->
    <route id="public.homepage" path="/">
        <default key="_controller">AppBundle:Default:home</default>
    </route>

    <!-- Register invitation -->
    <route id="public.register.invitation" path="/register/invitation/{invitationToken}">
        <default key="_controller">AppBundle:Register:registerFromInvitation</default>
    </route>

    <!-- Administrator's routes -->
    <route id="admin.login" path="/admin/login/">
        <default key="_controller">AppBundle:Admin:login</default>
    </route>

    <route id="admin.logout" path="/admin/logout/">
        <default key="_controller">AppBundle:Admin:logout</default>
    </route>

    <route id="admin.home" path="/admin/">
        <default key="_controller">AppBundle:Admin:index</default>
    </route>

    <route id="admin.invite.user" path="/admin/invite/user">
        <default key="_controller">AppBundle:Register:createInvitationForAdmins</default>
    </route>

    <!-- Campaign administrator's routes -->
    <route id="campaign_admin_admin.login" path="/campaign-admin/login/">
        <default key="_controller">AppBundle:CampaignAdmin:login</default>
    </route>

    <route id="campaign_admin.logout" path="/campaign-admin/logout/">
        <default key="_controller">AppBundle:CampaignAdmin:logout</default>
    </route>

    <route id="campaign_admin.home" path="/campaign-admin/">
        <default key="_controller">AppBundle:CampaignAdmin:index</default>
    </route>

    <route id="campaign_admin.invite.juror" path="/campaign-admin/{campaignId}/invite">
        <default key="_controller">AppBundle:Register:createInvitationForJuror</default>
    </route>

    <!-- Juror's routes -->
    <route id="juror.login" path="/juror/login/">
        <default key="_controller">AppBundle:Juror:login</default>
    </route>

    <route id="juror.logout" path="/juror/logout/">
        <default key="_controller">AppBundle:Juror:logout</default>
    </route>

    <route id="juror.home" path="/juror/">
        <default key="_controller">AppBundle:Juror:index</default>
    </route>

    <!-- Need to be sort => Put in the right section each route (admin, admin-campaign, juror) the lowest level of rights define the route -->
    <route id="realisation.list" path="/realisation/list">
        <default key="_controller">AppBundle:Realisation:list</default>
    </route>

    <route id="realisation.list_for_campaign" path="/realisation/list-for-campaign/{campaignId}">
        <default key="_controller">AppBundle:Realisation:listForCampaign</default>
    </route>

    <route id="realisation.register" path="/realisation/register/{campaignId}">
        <default key="_controller">AppBundle:Realisation:register</default>
    </route>

    <route id="realisation.show" path="/realisation/show/{realisationId}">
        <default key="_controller">AppBundle:Realisation:show</default>
    </route>

    <route id="realisation.delete" path="/realisation/delete/{realisationId}">
        <default key="_controller">AppBundle:Realisation:delete</default>
    </route>

    <route id="campaign.home" path="/campaign/{campaignId}">
        <default key="_controller">AppBundle:Realisation:register</default>
    </route>
</routes>
